{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "plugins": [
     "react"
    ],
    "rules": {
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/react-in-jsx-scope": 2,
      "no-console": 2,
      "max-depth": [2, 3],
      "max-len": [2, 120, 2],
      "max-lines": [2, 80],
      "no-param-reassign": 2,
      "semi": 2,
      "default-case": 2,
      "prefer-const": 2,
      "no-var": 2,
      "require-await": 2,
      "no-implied-eval": 2,
      "no-empty-function": 2,
      "no-constructor-return": 2,
      "eqeqeq": 2,
      "space-infix-ops": [
       2,
       { "int32Hint": true }
      ],
      "no-magic-numbers": [
       2,
       { "ignoreArrayIndexes": true, "ignore": [0, 1] }
      ],
      "quotes": [
       2,
       "double",
       { "avoidEscape": true, "allowTemplateLiterals": true }
    ]
  }
}
